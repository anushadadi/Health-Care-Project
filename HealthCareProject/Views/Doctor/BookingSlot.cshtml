@model HealthCareProject.Models.Doctor

@{

    ViewBag.Title = "BookingSlot";
    Layout = null;

}

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />

    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>

    <script type="text/javascript">

    $(function () {

        $("#datepicker").datepicker({ minDate: 0, maxDate: "+3M +0D", dateFormat:"dd-mm-yy" });

    });
    </script>
    <style>

        input[type="button"]:disabled {
            border: 2px outset ButtonFace;
            color: red;
            cursor: inherit;
            background-color: #ddd;
            background: #ddd;
        }
        input[type="button"]:enabled {
            border: 2px outset ButtonFace;
            color: green;
            cursor: inherit;
            background-color: #ddd;
            background: #ddd;
        }
    </style>

</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top bg-success navbar-expand-lg ">

        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                </button>

                @Html.ActionLink("Employee Page", "Home", "Employee", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@

                    <li>@Html.ActionLink("Employee", "About", "Home")</li>

                    @*<li>@Html.ActionLink("Doctor", "Contact", "Home")</li>*@

                </ul>

                @*@Html.Partial("_LoginPartial")*@

            </div>

        </div>

    </div>

    <center>
        @using (@Html.BeginForm("BookingSlot","Doctor",FormMethod.Post))

        {
            <h2>Booking Slot</h2>

            <p style="color:blue" id="hide"> Select Appointment Date and Time Slot </p>

            <p>Date: <input type="text" id="datepicker" name="datepicker" min="0" max="+3M" autocomplete="off" /></p>

            <p><h2>Time Slots</h2></p>

            for (DateTime x = Model.Start_Time; x <= Model.End_Time; x = x.AddMinutes(30))

            {
                    <input type="submit" id="btn1" value=" @x.ToShortTimeString()-@x.AddMinutes(30).ToShortTimeString()"
                           name="time" onclick="disableButton(value)" />
                    
                
            }
        }

    </center>

</body>
